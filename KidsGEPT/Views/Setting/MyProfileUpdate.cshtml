@using KidsGEPT.Models
@model dealer

@{
    ViewBag.Title = "基本資料";
}

<div id="content">

    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark"><i class="fa-fw fa fa-cog"></i> @FrontViewRes.MyProfileUpdate.MyProfileUpdateNavSetting <span>> @FrontViewRes.MyProfileUpdate.MyProfileUpdateNavProfile</span></h1>
        </div>
    </div>
    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-sm-12 col-md-12 col-lg-6">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-3" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-custombutton="false" data-widget-collapsed="false" data-widget-sortable="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-user"></i> </span>
                        <h2>@FrontViewRes.MyProfileUpdate.MyProfileUpdateNavProfile</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            @using (Html.BeginForm("MyProfileUpdate", "Setting", FormMethod.Post, new { @class = "form-horizontal" }))
                            {
    
                                if (Html.ValidationSummary(true) != null)
                                {
                                <div class="alert alert-danger alert-block">
                                    <h4 class="alert-heading">Error!</h4>
                                    @Html.ValidationSummary(true)
                                </div>
                                }

                                @Html.HiddenFor(model => model.dealerid)
                                
                                <fieldset>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">E-mail</label>
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(model => model.email, new { @placeholder = "Email", @class = "form-control" })
                                            <p class="note">@FrontViewRes.MyProfileUpdate.MyProfileUpdateEmailNote</p>
                                            @Html.ValidationMessageFor(model => model.email)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-2 control-label">@FrontViewRes.MyProfileUpdate.MyProfileUpdateLanguage</label>
                                        <div class="col-md-10">
                                            @Html.DropDownListFor(model => model.languageid, null, FrontViewRes.MyProfileUpdate.MyProfileUpdateLanguageNote, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.languageid)
                                        </div>
                                    </div>

                                </fieldset>

                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <button class="btn btn-primary" type="submit">
                                                <i class="fa fa-save"></i>
                                                @FrontViewRes.MyProfileUpdate.MyProfileUpdateButtonConfirm
                                            </button>
                                        </div>
                                    </div>
                                </div>
    
                                }
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->

    </section>
    <!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->
@section scripts {

}