@using KidsGEPT.Helpers
@using KidsGEPT.Common

<!-- Left panel : Navigation area -->
<!-- Note: This width of the aside area can be adjusted through LESS variables -->
<aside id="left-panel">
    <!-- User info -->
    <div class="login-info">
        <span>
            <a href="javascript:void(0);" id="show-shortcut" data-action="toggleShortcut">
                <img src="~/content/img/avatars/sunny.png" alt="me" class="online" />
                <span>@Session["user"]</span>
                <i class="fa fa-angle-down"></i>
            </a>
        </span>
    </div>
    <!-- end user info -->
    <!-- NAVIGATION : This navigation is also responsive

    To make this navigation dynamic please make sure to link the node
    (the reference to the nav > ul) after page load. Or the navigation
    will not initialize.
    -->
    <nav>
        <!-- NOTE: Notice the gaps after each icon usage <i></i>..
        Please note that these links work a bit different than
        traditional href="" links. See documentation for details.
        -->
        <ul>
            <li class="@Html.RouteIf("main", "active")">
                <a href="@Url.Action("index", "main")" title="Dashboard"><i class="fa fa-lg fa-fw fa-home"></i> <span class="menu-item-parent">@FrontViewRes._Leftmenu._LeftmenuDashboard</span></a>
            </li>
            <li class="@Html.RouteIf("stock", "active")">
                <a href="#"><i class="fa fa-lg fa-fw fa-reorder"></i> <span class="menu-item-parent">@FrontViewRes._Leftmenu._LeftmenuInquiry</span></a>
                <ul>
                    <li class="@Html.RouteIf("advance", "active")">
                        <a href="@Url.Action("advance", "stock")">@FrontViewRes._Leftmenu._LeftmenuInquiryAdvance</a>
                    </li>
                    <li class="@Html.RouteIf("quick", "active")">
                        <a href="@Url.Action("quick", "stock")">@FrontViewRes._Leftmenu._LeftmenuInquiryQuick</a>
                    </li>
                </ul>
            </li>
            <li class="@Html.RouteIf("shopping", "active")">
                <a href="@Url.Action("shoppinglist", "shopping")"><i class="fa fa-lg fa-fw fa-shopping-cart"></i> <span class="menu-item-parent">@FrontViewRes._Leftmenu._LeftmenuShoppingList</span><span class="badge bg-color-greenLight pull-right inbox-badge" id="cart-count">@ViewBag.ShoppingCount</span></a>
            </li>
            <li class="@Html.RouteIf("order", "active")">
                <a href="@Url.Action("orderlist", "order")"><i class="fa fa-lg fa-fw fa-history"></i> <span class="menu-item-parent">@FrontViewRes._Leftmenu._LeftmenuOrderList</span></a>
            </li>
            <li class="@Html.RouteIf("setting", "active")">
                <a href="#"><i class="fa fa-lg fa-fw fa-cog"></i> <span class="menu-item-parent">@FrontViewRes._Leftmenu._LeftmenuSetting</span></a>
                <ul>
                    <li class="@Html.RouteIf("myprofileupdate", "active")">
                        <a href="@Url.Action("myprofileupdate", "setting")">@FrontViewRes._Leftmenu._LeftmenuSettingProfile</a>
                    </li>
                    <li class="@Html.RouteIf("changepassword", "active")">
                        <a href="@Url.Action("changepassword", "setting")">@FrontViewRes._Leftmenu._LeftmenuSettingChangepassword</a>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>
    <span class="minifyme" data-action="minifyMenu">
        <i class="fa fa-arrow-circle-left hit"></i>
    </span>
</aside>
<!-- END NAVIGATION -->